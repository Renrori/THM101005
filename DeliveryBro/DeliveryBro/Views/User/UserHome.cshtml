@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/vue@3.2.36/dist/vue.global.prod.js"></script>
    <script src="~/axios/axios.min.js"></script>
    <script>
        var baseAddress = "https://localhost:7163/api/UserApi";
        var CustomerId = @User.Claims.FirstOrDefault(c => c.Type == "CustomerId")?.Value;
        var vueApp = {
            data() {
                return {
                    isEditing: false,
                    CustomerInfo: {}
                }
            },
            mounted() {
                this.getCustomerInfo();
            },
            methods: {
                toggleEdit() {
                    this.isEditing = !this.isEditing;
                },
                async getCustomerInfo() {
                    //拿出對應cusId
                    try {
                        const response = await axios.get(`${baseAddress}/${CustomerId}`).then(Response => {
                            this.CustomerInfo = Response.data;
                        })
                    } catch (error) {
                        console.error(error);
                    }
                },
                async putCustomerInfo() {
                    const data = {
                        userName: this.CustomerInfo.userName,
                        userEmail: this.CustomerInfo.userEmail,
                        userBirth: this.CustomerInfo.userBirth,
                        userPhone: this.CustomerInfo.userPhone
                    }
                    //拿出對應cusId
                    try {
                        axios.put(`${baseAddress}/${CustomerId}`, data).then(Response => {
                            console.log("修改成功");
                            this.isEditing = false;
                        })
                    } catch {
                        console.log("修改失敗")
                    }
                }
            }
        };
        var app = Vue.createApp(vueApp).mount("#app");
    </script>
         }
