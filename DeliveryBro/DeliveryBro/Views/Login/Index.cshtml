@model LoginViewModel

@*網頁內容*@


<form asp-controller="Login" asp-action="Index" method="post">
    <div class="container">
       
        <div>
            <label class="form-label">@Html.DisplayNameFor(model=>model.UserAccount)</label>
            <input type="text" asp-for="UserAccount" class="form-control" />
            <span asp-validation-for="UserAccount" class="text-danger"></span>
        </div>
        <div>
            <label class="form-label">@Html.DisplayNameFor(model=>model.UserPassword)</label>
            <input type="Password" asp-for="UserPassword" class="form-control" />
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }
        <div class="form-group">
            <button type="submit"><i class="fa-solid fa-square-arrow-up-right"></i>送出</button>
            <span><p>沒有帳號?</p><a herf="">點擊註冊</a></span>
        </div>

    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}