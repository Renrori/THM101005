@model LoginViewModel

@*網頁內容*@


<form asp-controller="Login" asp-action="Index" method="post" class="bg-white">
    <div class="">
        <div class="form-group row">
            <div class="col-md-12">
                <label for="c_uname" class="text-black">@Html.DisplayNameFor(model=>model.UserAccount) <span class="text-danger">*</span></label>
                <input type="text" asp-for="UserAccount" class="form-control">
                <span asp-validation-for="UserAccount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label for="c_password" class="text-black">@Html.DisplayNameFor(model=>model.UserPassword) <span class="text-danger">*</span></label>
                <input type="Password" asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="text-danger">@ViewBag.ErrorMessage</div>
    }
    <div class="form-group">
        <div class="form-group row">
            <div class="col-lg-12">
                <input type="submit" class="btn btn-primary btn-lg" value="登入">
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}