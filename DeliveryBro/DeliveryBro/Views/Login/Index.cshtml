@model LoginViewModel

@*網頁內容*@

<main class="form-signin w-100 m-auto text-center">
<form asp-controller="Login" asp-action="Index" method="post" class="bg-white">
	<div class="site-section">
		<div class="container aos-init aos-animate" data-aos="fade-up">
			<div class="row justify-content-center">
				<div class="col-md-5 mb-5">
					<h3 class="mb-5">登入</h3>
					<div class="form-group row">
						<div class="col-md-12">
							<label for="c_uname" class="text-black">@Html.DisplayNameFor(model=>model.UserAccount) <span class="text-danger">*</span></label>
							<input type="text" asp-for="UserAccount" class="form-control">
							<span asp-validation-for="UserAccount" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-12">
							<label for="c_password" class="text-black">@Html.DisplayNameFor(model=>model.UserPassword) <span class="text-danger">*</span></label>
							<input type="Password" asp-for="UserPassword" class="form-control" />
							<span asp-validation-for="UserPassword" class="text-danger"></span>
						</div>
					</div>
					@if (ViewBag.ErrorMessage != null)
					{
						<div class="text-danger">@ViewBag.ErrorMessage</div>
					}
					<div class="form-group">
						<div class="form-group row">
							<div class="col-lg-12">
								<input type="submit" class="btn btn-primary btn-lg" value="登入">
							</div>
						</div>
					</div>
					<div>
						<hr />
						<div>
							<i class="fab fa-facebook"></i>
							<span>
								<a href="/Login/FacebookLogin" class="btn btn-primary btn-sm">Facebook登入</a>
							</span>
							<i class="fab fa-google"></i>
							<span>
								<a href="/Login/GoogleLogin" class="btn btn-primary btn-sm">Google登入</a>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	

	
	
</form>
</main>






@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}